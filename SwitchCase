publc class SwitchCase
{
   public static void main(String [] args)
   {
     system.out.println("Enter a day number");
	 int day=a.nextint();
	 switc(day){
	 case1:
	    system.out.println("sunday");
		break;
	case2:
	    system.out.println("Monday");
		break;
	cas3:
	    system.out.println("tuesday");
		break;
	case4:
	    system.out.println("Wednesday");
